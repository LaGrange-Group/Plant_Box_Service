<div class="container" style="padding-top:200px">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title" id="myDonatingModal-label">Donate your Plant this Month?</h3>
                </center>
                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12" style="padding:40px">
                                <center>
                                    @Html.ActionLink("Yes!", "ToggleDonating", "Dashboard", new { customerId = Model.Customer.Id }, new { @class = "btn btn-warning btn-large", style = "width:200px; padding:20px" })
                                </center>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
