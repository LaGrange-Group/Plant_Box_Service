@model Plant_Box_Service.Models.DashboardViewModel
<div class="container" style="padding-top:200px; width:45%">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    @if (Model.Customer.Donating == false)
                    {
                        <h3 class="modal-title" id="myDonatingModal-label">Donate your Plant this Month?</h3>
                    }
                    else
                    {
                        <h3 class="modal-title" id="myDonatingModal-label">Turn Off Donating for this Month?</h3>
                    }
                </center>
                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12" style="padding:40px">
                                <center>
                                    @if (Model.Customer.Donating == false)
                                    {
                                        @Html.ActionLink("Yes!", "ToggleDonating", "Dashboard", new { customerId = Model.Customer.Id }, new { @class = "btn btn-warning btn-large", style = "width:200px" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Yes!", "ToggleDonating", "Dashboard", new { customerId = Model.Customer.Id }, new { @class = "btn btn-danger btn-large", style = "width:200px" })
                                    }

                                </center>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
