@model Plant_Box_Service.Models.DashboardViewModel

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<div class="container" style="padding-top:200px">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title" id="myGiftStatusModal-label">Update Gift Status</h3>
                </center>
                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6" style="padding:40px">
                                <center>
                                    <button type="button" class="btn btn-primary btn-large" id="Gift_Update" style="width:200px; padding:20px">Update Gift Details</button>
                                </center>
                            </div>
                            <div class="col-md-6" style="padding:40px">
                                <center>
                                    @Html.ActionLink("Turn Off Gifting", "TurnOffGifting", "Dashboard", new { customerId = Model.Customer.Id }, new { @class = "btn btn-danger btn-large", style = "width:200px; padding:20px" })
                                </center>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myGiftUpdateModal" role="dialog" data-url='@Url.Action("GiftUpdate","Dashboard")'></div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#Gift_Update').click(function () {

            var url = $('#myGiftUpdateModal').data('url');
            $.get(url, function (data) {

                $("#myModal").html(data);
                $("#myModal").modal('show');
            });
        });

    });
</script>